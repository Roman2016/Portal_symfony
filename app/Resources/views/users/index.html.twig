{% extends 'base.html.twig' %}

{% block body %}
    <h1>Users list</h1>

    <table>
        <thead>
            <tr>
                <th>Userid</th>
                <th>Username</th>
                <th>Userpassword</th>
                <th>Userregistrationdate</th>
                <th>Userlastvisitdate</th>
                <th>Useremail</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td><a href="{{ path('user_show', { 'id': user.userId }) }}">{{ user.userId }}</a></td>
                <td>{{ user.userName }}</td>
                <td>{{ user.userPassword }}</td>
                <td>{% if user.userRegistrationDate %}{{ user.userRegistrationDate|date('Y-m-d') }}{% endif %}</td>
                <td>{% if user.userLastVisitDate %}{{ user.userLastVisitDate|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ user.userEmail }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('user_show', { 'id': user.userId }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('user_edit', { 'id': user.userId }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('user_new') }}">Create a new entry</a>
        </li>
    </ul>
{% endblock %}
