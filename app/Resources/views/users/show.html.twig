{% extends 'base.html.twig' %}

{% block body %}
    <h1>Users</h1>

    <table>
        <tbody>
            <tr>
                <th>Userid</th>
                <td>{{ user.userId }}</td>
            </tr>
            <tr>
                <th>Username</th>
                <td>{{ user.userName }}</td>
            </tr>
            <tr>
                <th>Userpassword</th>
                <td>{{ user.userPassword }}</td>
            </tr>
            <tr>
                <th>Userregistrationdate</th>
                <td>{% if user.userRegistrationDate %}{{ user.userRegistrationDate|date('Y-m-d') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Userlastvisitdate</th>
                <td>{% if user.userLastVisitDate %}{{ user.userLastVisitDate|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Useremail</th>
                <td>{{ user.userEmail }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('user_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('user_edit', { 'id': user.userId }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
