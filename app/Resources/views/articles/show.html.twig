{% extends 'base.html.twig' %}

{% block body %}
    <h1>Articles</h1>

    <table>
        <tbody>
            <tr>
                <th>Articleid</th>
                <td>{{ article.articleId }}</td>
            </tr>
            <tr>
                <th>Articletitle</th>
                <td>{{ article.articleTitle }}</td>
            </tr>
            <tr>
                <th>Articletext</th>
                <td>{{ article.articleText }}</td>
            </tr>
            <tr>
                <th>Articleadddate</th>
                <td>{% if article.articleAddDate %}{{ article.articleAddDate|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('article_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('article_edit', { 'id': article.articleId }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
